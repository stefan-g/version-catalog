{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "groupName": "all non-major spring dependencies",
      "groupSlug": "all-minor",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "matchManagers": ["gradle"],
      "groupName": "all patch dependencies",
      "groupSlug": "all-patches",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "matchPackageNames": ["it.ozimov:embedded-redis"],
      "enabled": false
    }
  ]
}

