{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "matchManagers": ["gradle"],
      "groupName": "all non-major spring dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackageNames": ["*"],
      "matchManagers": ["npm"],
      "groupName": "all non-major npm dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackageNames": ["it.ozimov:embedded-redis"],
      "enabled": false
    }
  ]
}

